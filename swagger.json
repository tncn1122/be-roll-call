{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "PTIT Roll-Call APIs"
  },
  "host": "be-checkin.herokuapp.com",
  "basePath": "/api",
  "tags": [
    {
      "name": "class"
    },
    {
      "name": "user"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/user/register": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Create user",
        "description": "This can only be done by the logged in user.",
        "operationId": "createUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Logs user into the system",
        "description": "",
        "operationId": "loginUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            },
            "description": "The user name and password for login",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A User object",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "$ref": "#/definitions/User"
                },
                "token": {
                  "type": "string",
                  "description": "The user name."
                }
              }
            }
          },
          "401": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "description": "User Info"
        }
      },
      "xml": {
        "name": "User"
      }
    }
  }
}